<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff">

    <TextView
        android:id="@+id/myHeaderView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="0dp"
        android:includeFontPadding="false"
        android:background="#ffffff" />

    <LinearLayout
        android:layout_below="@id/myHeaderView"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="vertical"
        android:background="#992f1ca4"
        android:id="@+id/linearLayout"></LinearLayout>

    <Button
        android:id="@+id/check_Js_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="检测漏洞"
        android:layout_below="@+id/linearLayout"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <FrameLayout
        android:id="@+id/fragment_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/check_Js_btn"></FrameLayout>
</RelativeLayout>
